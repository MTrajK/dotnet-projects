@page "/notes/edit/{Id:int}"
@inject HttpClient Http
@inject NavigationManager Navigation

<PageTitle>Forget me? Regret me! - Edit Note</PageTitle>

<div class="modal show d-block" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Note</h5>
                <button type="button"
                        class="btn-close"
                        aria-label="Close"
                        @onclick="GoBack">
                </button>
            </div>

            @if (isLoading)
            {
                <div class="modal-body text-center text-muted">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Loading...</span>
                    </div>
                    <p class="mt-2 mb-0">Loading note...</p>
                </div>
            }
            else if (isError)
            {
                <div class="modal-body">
                    <div class="alert alert-danger mb-0">
                        Error!
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="GoBack">
                        Close
                    </button>
                </div>
            }
            else if (model is null)
            {
                <div class="modal-body">
                    <div class="alert alert-danger mb-0">
                        Note not found.
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button"
                            class="btn btn-outline-secondary"
                            @onclick="GoBack">
                        Close
                    </button>
                </div>
            }
            else
            {
                <EditForm Model="model" OnValidSubmit="UpdateAsync">
                    <DataAnnotationsValidator />
                    <ValidationSummary />

                    <div class="modal-body">
                        <div class="mb-3">
                            <label class="form-label">Title</label>
                            <InputText @bind-Value="model.Title"
                                       class="form-control" />
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Description</label>
                            <InputTextArea @bind-Value="model.Description"
                                           class="form-control"
                                           rows="5" />
                        </div>
                    </div>

                    <div class="modal-footer">
                        <button type="button"
                                class="btn btn-danger me-auto"
                                @onclick="DeleteAsync">
                            Delete
                        </button>
                        <button type="button"
                                class="btn btn-outline-secondary"
                                @onclick="GoBack">
                            Cancel
                        </button>
                        <button type="submit"
                                class="btn btn-primary">
                            Save
                        </button>
                    </div>
                </EditForm>
            }
        </div>
    </div>
</div>

<div class="modal-backdrop show"></div>

@code {
    [Parameter] public int Id { get; set; }

    private readonly string allNotesPageUrl = "/notes";

    private readonly string getNoteApiUrl = "api/notes/{0}";
    private readonly string updateNoteApiUrl = "api/notes";
    private readonly string deleteNoteApiUrl = "api/notes/{0}";

    private UpdateNoteRequest? model;
    private bool isLoading = true;
    private bool isError = false;

    protected override async Task OnInitializedAsync()
    {
        isLoading = true;

        try
        {
            var url = String.Format(getNoteApiUrl, Id);
            var note = await Http.GetFromJsonAsync<NoteResponse>(url);
            if (note is not null)
            {
                model = new UpdateNoteRequest
                {
                    Id = note.Id,
                    Title = note.Title,
                    Description = note.Description
                };
            }
            else
            {
                // Handle error
                isError = true;
            }
        }
        catch
        {
            // Handle error
            isError = true;
        }

        isLoading = false;
    }

    private async Task UpdateAsync()
    {
        isLoading = true;

        if (string.IsNullOrWhiteSpace(model?.Title))
        {
            // Handle error
            isLoading = false;
            isError = true;
            return;
        }

        try
        {
            var response = await Http.PutAsJsonAsync(updateNoteApiUrl, model);
            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo(allNotesPageUrl);
            }
            else
            {
                // Handle error
                isError = true;
            }
        }
        catch
        {
            // Handle error
            isError = true;
        }

        isLoading = false;
    }

    private async Task DeleteAsync()
    {
        isLoading = true;

        try
        {
            var url = String.Format(deleteNoteApiUrl, Id);
            var response = await Http.DeleteAsync(url);
            if (response.IsSuccessStatusCode)
            {
                Navigation.NavigateTo(allNotesPageUrl);
            }
            else
            {
                // handle errors
            }
        }
        catch
        {
            // Handle error
            isError = true;
        }

        isLoading = false;
    }

    private void GoBack()
    {
        Navigation.NavigateTo(allNotesPageUrl);
    }
}